{
  "manifest_version": 3,
  "version": "0.2.7",
  "name": "OCR - Image Reader",
  "description": "A powerful optical character recognition (OCR) extension to capture and convert images to text",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://tessdata.projectnaptha.com/4.0.0/*.gz",
    "https://github.com/naptha/tessdata/blob/gh-pages/*.gz?raw=true"
  ],
  "homepage_url": "https://add0n.com/ocr.html",
  "background": {
    "service_worker": "worker.js"
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },
  "action": {},
  "web_accessible_resources": [{
    "resources": [
      "data/ui/index.html"
    ],
    "matches": ["<all_urls>"]
  }]
}
